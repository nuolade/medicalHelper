<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dp"
    android:layout_margin="2dp"
    >
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/button_pre"
        android:background="@drawable/shape_button_pre"
        android:text="上一步"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:textSize="25sp"
        android:textColor="@color/colorTextWhite"
        >

    </Button>



    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/button_yes"
        android:background="@drawable/shape_button_yes"
        android:text="是"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:textSize="25sp"
        android:textColor="@color/colorTextWhite"

        >

    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/button_no"
        android:background="@drawable/shape_button_no"
        android:text="否"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:textSize="25sp"
        android:textColor="@color/colorTextWhite"
        >

    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/button_analyze"
        android:background="@drawable/shape_button_analyze"
        android:text="分析"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:textSize="25sp"
        android:textColor="@color/colorTextWhite"
        >

    </Button>
</LinearLayout>