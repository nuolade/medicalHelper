<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.tizhi.TzResultActivity"
    android:padding="3dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/layout_tz_record"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="体质基本信息"
            android:background="@drawable/shape_ques_title"
            android:textColor="@color/colorTextWhite"
            android:layout_margin="1dp"
            android:paddingLeft="20dp"
            android:textSize="30sp"
            android:gravity="center_vertical"
            android:id="@+id/record_title"
            />
        <com.lsy.radarview.SyRadarView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="300dp"
            android:id="@+id/radar_tz_result"
            app:textColor="@color/colorAccent"
            app:shadowAlpha="200"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/text_tz_res"
            android:textSize="20sp"
            android:background="@color/colorAliceBlue"
            android:padding="10dp"
            android:layout_weight="2"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_tz_info"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:background="@drawable/shape_bz_text"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/edit_name"
                    android:lines="1"
                    android:gravity="center"
                    android:background="@drawable/shape_edit_blue"
                    android:layout_margin="1dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年龄"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:background="@drawable/shape_bz_text"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/edit_age"
                    android:lines="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:background="@drawable/shape_edit_blue"
                    android:layout_margin="1dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_margin="1dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:background="@drawable/shape_bz_text"
                    />
                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/radio_sign_sex"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="男"
                        android:id="@+id/radio_sign_male"
                        />
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:checked="false"
                        android:text="女"
                        android:id="@+id/radio_sign_female"
                        />

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:checked="false"
                        android:text="通用"
                        android:id="@+id/radio_sign_other"
                        />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:background="@drawable/shape_bz_text"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/edit_phone"
                    android:lines="1"
                    android:inputType="phone"
                    android:gravity="center"
                    android:background="@drawable/shape_edit_blue"
                    android:layout_margin="1dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            >


            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/button_result_analyze"
                android:text="分析"
                android:gravity="center"
                android:background="@drawable/shape_button_analyze"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/button_result_save"
                android:text="保存"
                android:gravity="center"
                android:background="@drawable/shape_button_pre"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/layout_tz_suggest"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <include layout="@layout/tz_record_suggest"/>
        </ScrollView>
    </LinearLayout>
    <include layout="@layout/fab_s_d_v"/>

</LinearLayout>