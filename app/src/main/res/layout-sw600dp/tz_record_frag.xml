<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="体质记录查询"
        android:background="@drawable/shape_ques_title"
        android:id="@+id/q_title"
        android:layout_margin="1dp"
        android:paddingLeft="20dp"
        android:textSize="32sp"
        android:gravity="center_vertical"
        android:textColor="@color/colorTextWhite"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_condition"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:background="@drawable/shape_bz_text"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:lines="1"
                android:id="@+id/tz_edit_name"
                android:background="@drawable/shape_edit_blue"
                android:padding="2dp"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="电话"
                android:textSize="20sp"
                android:background="@drawable/shape_bz_text"
                />

            <EditText
                android:id="@+id/tz_edit_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_edit_blue"
                android:gravity="center"
                android:inputType="phone"
                android:lines="1"
                android:padding="2dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清空"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/shape_button_no"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/button_clear"
                android:layout_margin="1dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查询"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:background="@drawable/shape_button_yes"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/button_search"
                android:layout_margin="1dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查询内容"
                android:textSize="20sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/shape_bz_text"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                >
                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/radio_sign_type"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:layout_marginRight="10dp"
                        android:textSize="15dp"
                        android:text="成人"
                        android:id="@+id/radio_sign_adult"

                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:checked="false"
                        android:layout_marginRight="10dp"
                        android:textSize="15dp"
                        android:text="小孩"
                        android:id="@+id/radio_sign_child"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:checked="false"
                        android:layout_marginRight="10dp"
                        android:textSize="15dp"
                        android:text="五型"
                        android:id="@+id/radio_sign_wx"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:checked="false"
                        android:layout_marginRight="10dp"
                        android:textSize="15dp"
                        android:text="单项"
                        android:id="@+id/radio_sign_one"
                        />

                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:id="@+id/layout_check_ones"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单项内容"
                android:textSize="20sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/shape_bz_text"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:id="@+id/layout_check"
                >
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="阳虚质"
                    android:id="@+id/check_yangxu"
                    />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="阴虚质"
                    android:id="@+id/check_yinxu"
                    />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="气虚质"
                    android:id="@+id/check_qixu"
                    />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="痰湿质"
                    android:id="@+id/check_tanshi"
                    />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="湿热质"
                    android:id="@+id/check_shire"
                    />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="血瘀质"
                    android:id="@+id/check_xueyu"
                    />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="气郁质"
                    android:id="@+id/check_qiyu"
                    />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="血虚质"
                    android:id="@+id/check_xuexu"
                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间"
                android:textSize="20sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/shape_bz_text"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/edit_s_y"
                android:background="@drawable/shape_edit_blue"
                android:padding="2dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年"
                android:textSize="20sp"
                android:background="@color/colorPre"
                android:padding="5dp"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:lines="1"
                android:inputType="number"
                android:id="@+id/edit_s_m"
                android:background="@drawable/shape_edit_blue"
                android:padding="2dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"
                android:textSize="20sp"
                android:background="@color/colorPre"
                android:padding="5dp"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:lines="1"
                android:inputType="number"
                android:id="@+id/edit_s_d"
                android:background="@drawable/shape_edit_blue"
                android:padding="2dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日"
                android:textSize="20sp"
                android:background="@drawable/shape_bz_text_ri"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                />
            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束时间"
                android:textSize="20sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/shape_bz_text"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:lines="1"
                android:inputType="number"
                android:id="@+id/edit_e_y"
                android:background="@drawable/shape_edit_blue"
                android:padding="2dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年"
                android:textSize="20sp"
                android:background="@color/colorPre"
                android:padding="5dp"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:lines="1"
                android:inputType="number"
                android:id="@+id/edit_e_m"
                android:background="@drawable/shape_edit_blue"
                android:padding="2dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"
                android:textSize="20sp"
                android:background="@color/colorPre"
                android:padding="5dp"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:lines="1"
                android:inputType="number"
                android:id="@+id/edit_e_d"
                android:background="@drawable/shape_edit_blue"
                android:padding="2dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日"
                android:textSize="20sp"
                android:background="@drawable/shape_bz_text_ri"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/up"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:paddingRight="20dp"
            android:id="@+id/image_show"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/layout_list"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="序号"
                android:textSize="17sp"
                android:padding="4dp"
                android:layout_margin="1dp"
                android:background="@color/colorLightSkyBlue"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17sp"
                android:text="姓名"
                android:padding="4dp"
                android:layout_margin="1dp"
                android:background="@color/colorLightSkyBlue"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17sp"
                android:text="性别"
                android:padding="4dp"
                android:layout_margin="1dp"
                android:background="@color/colorLightSkyBlue"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17sp"
                android:text="电话"
                android:padding="4dp"
                android:layout_margin="1dp"
                android:background="@color/colorLightSkyBlue"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17sp"
                android:text="日期"
                android:padding="4dp"
                android:layout_margin="1dp"
                android:background="@color/colorLightSkyBlue"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17sp"
                android:text="时间"
                android:padding="4dp"
                android:layout_margin="1dp"
                android:background="@color/colorLightSkyBlue"
                android:gravity="center"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="17sp"
            android:text="无查询结果"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:id="@+id/text_res_empty"
            android:visibility="gone"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/tz_record_recycler"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/layout_image"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="单项体质趋势记录"
            android:textSize="17sp"
            android:padding="4dp"
            android:layout_margin="1dp"
            android:background="@color/colorLightSkyBlue"
            android:gravity="center"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_one"
            />
    </LinearLayout>





</LinearLayout>