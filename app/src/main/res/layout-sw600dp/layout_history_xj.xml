<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_edit_pink"
            >
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:id="@+id/edit_search"
                android:layout_margin="2dp"
                />
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/cancel"
                android:id="@+id/image_cancel"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/button_voice"
                android:src="@drawable/mc"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                />
        </LinearLayout>
        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/button_search"
            android:textColor="@color/colorTextGray"
            android:background="@drawable/shape_button_xj"
            android:text="查找"
            android:layout_margin="2dp"
            android:textSize="17sp"
            android:layout_gravity="center"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/button_history"
            android:text="搜索历史"
            android:textColor="@color/colorTextGray"
            android:background="@drawable/shape_button_xj"
            android:layout_margin="2dp"
            android:textSize="17sp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/layout_history"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLavenderBlush"
            >
            <TextView
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="历史记录"
                android:textSize="17sp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:text="清空历史"
                android:id="@+id/button_history_clear"
                android:textColor="@color/colorTextGray"
                android:background="@drawable/shape_button_xj"
                android:layout_margin="2dp"
                android:textSize="17sp"
                />
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_history"
            />
    </LinearLayout>

</LinearLayout>