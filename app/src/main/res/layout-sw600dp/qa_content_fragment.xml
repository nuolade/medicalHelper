<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPeru"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/text_title"
            android:textSize="30sp"
            android:layout_margin="1dp"
            android:textColor="@color/colorTextWhite"

            />
        <Button

            android:layout_height="wrap_content"
            android:background="@drawable/shape_button_analyze"
            android:layout_gravity="center_vertical"
            android:layout_width="120dp"
            android:id="@+id/button_sound"
            android:text="声音："
            android:textSize="20sp"
            android:textColor="@color/colorTextWhite"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            />
        <Button

            android:layout_height="wrap_content"
            android:background="@drawable/shape_button_no"
            android:layout_gravity="center_vertical"
            android:layout_width="120dp"
            android:id="@+id/button_del"
            android:text="删除"
            android:textSize="20sp"
            android:textColor="@color/colorTextWhite"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/recycler_msg"
        android:layout_margin="2dp"
        android:background="@color/colorTextWhite"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPapayaWhip"
        android:padding="3dp"
        android:layout_margin="2dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_qa_session_bg"
            >
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/edit_msg_input"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="5dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/cancel"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="5dp"
                android:id="@+id/image_cancel"
                />
        </LinearLayout>

        <Button
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/button_send"
            android:text="发送"
            android:background="@drawable/shape_button_analyze"
            android:textSize="20sp"
            android:textColor="@color/colorTextWhite"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/button_say"
            android:text="语音"
            android:background="@drawable/shape_button_yes"
            android:textSize="20sp"
            android:textColor="@color/colorTextWhite"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>

</LinearLayout>