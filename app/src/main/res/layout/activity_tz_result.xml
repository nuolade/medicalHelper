<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.tizhi.TzResultActivity"
    android:padding="1dp"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="体质基本信息"
                android:background="@drawable/shape_ques_title"
                android:textColor="@color/colorTextWhite"
                android:layout_margin="1dp"
                android:paddingLeft="20dp"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:id="@+id/record_title"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layout_tz_record"
                >
                <com.lsy.radarview.SyRadarView
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:layout_height="200dp"
                    android:id="@+id/radar_tz_result"
                    app:textColor="@color/colorAccent"
                    app:shadowAlpha="200"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_tz_res"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:text="a"
                    android:background="@color/colorAliceBlue"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_tz_info"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="姓名"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:background="@drawable/shape_bz_text"
                            />
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/edit_name"
                            android:lines="1"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:background="@drawable/shape_edit_blue"

                            android:layout_marginRight="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="手机"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:background="@drawable/shape_bz_text"
                            />
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:id="@+id/edit_phone"
                            android:lines="1"
                            android:inputType="phone"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:background="@drawable/shape_edit_blue"

                            android:layout_marginRight="1dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="年龄"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:background="@drawable/shape_bz_text"
                            />
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/edit_age"
                            android:lines="1"
                            android:inputType="number"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:background="@drawable/shape_edit_blue"

                            android:layout_marginRight="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="性别"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:background="@drawable/shape_bz_text"
                            />
                        <RadioGroup
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:id="@+id/radio_sign_sex"
                            android:orientation="horizontal"
                            >
                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:checked="true"
                                android:text="男"
                                android:id="@+id/radio_sign_male"
                                android:textSize="13sp"
                                />
                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:checked="false"
                                android:text="女"
                                android:id="@+id/radio_sign_female"
                                android:textSize="13sp"
                                />

                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:checked="false"
                                android:text="通用"
                                android:id="@+id/radio_sign_other"
                                android:textSize="13sp"
                                />
                        </RadioGroup>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layout_tz_suggest"
                android:visibility="gone"
                android:orientation="vertical">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <include layout="@layout/tz_record_suggest"/>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/button_result_analyze"
            android:text="分析"
            android:gravity="center"
            android:background="@drawable/shape_button_analyze"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/button_result_save"
            android:text="保存"
            android:gravity="center"
            android:background="@drawable/shape_button_pre"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            />

    </LinearLayout>
    <include layout="@layout/fab_s_d_h"/>
</LinearLayout>