<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/button_pre"
        android:background="@drawable/shape_button_pre"
        android:text="上一步"
        android:layout_margin="2dp"
        android:textSize="19sp"
        android:textColor="@color/colorTextWhite"
        >

    </Button>


    <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/text_w"
        android:visibility="gone"
        >

    </EditText>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/image_repeat"
        android:src="@drawable/repeat"
        android:scaleType="centerInside"
        android:padding="0dp"
        >

    </ImageView>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/image_say"
        android:src="@drawable/microphone"
        android:scaleType="centerInside"
        android:padding="7dp"
        >

    </ImageView>

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/button_yes"
        android:background="@drawable/shape_button_yes"
        android:text="是"
        android:layout_margin="2dp"
        android:textSize="19sp"
        android:textColor="@color/colorTextWhite"

        >

    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/button_no"
        android:background="@drawable/shape_button_no"
        android:text="否"
        android:layout_margin="2dp"
        android:textSize="19sp"
        android:textColor="@color/colorTextWhite"
        >

    </Button>
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/button_save"
        android:background="@drawable/shape_button_pre"
        android:text="保存"
        android:layout_margin="2dp"
        android:textSize="19sp"
        android:textColor="@color/colorTextWhite"
        >

    </Button>

</LinearLayout>