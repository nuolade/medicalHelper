<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="节气查询"
        android:background="@drawable/shape_ques_title"
        android:textColor="@color/colorTextWhite"
        android:layout_margin="1dp"
        android:paddingLeft="20dp"
        android:textSize="25sp"
        android:gravity="center_vertical"
        />
    <com.example.wenda01.views.Wheel.WheelView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jq_wheel"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <include layout="@layout/line_h_blue"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:id="@+id/layout_jq_button"
            android:visibility="visible"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/button_jq_spring"
                android:text="春"
                android:src="@drawable/spring"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/button_jq_summer"
                android:text="夏"
                android:src="@drawable/summer"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/button_jq_fall"
                android:text="秋"
                android:src="@drawable/fall"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/button_jq_winter"
                android:text="冬"
                android:src="@drawable/winner"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/list_jq"
            />
        <include layout="@layout/line_h_blue"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/button_weather"
        android:text="查看天气"
        android:textColor="@color/colorTextWhite"
        android:layout_margin="1dp"
        android:paddingLeft="20dp"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/shape_button_pre"
        />

</LinearLayout>