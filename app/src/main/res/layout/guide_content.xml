<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBG"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_ques_title"
            android:textColor="@color/colorTextWhite"
            android:layout_margin="1dp"
            android:paddingLeft="20dp"
            android:textSize="25sp"
            android:gravity="center_vertical"
            android:text="请选择查询的病症"

            android:id="@+id/text_guide_title"
            />
    </LinearLayout>

    <include layout="@layout/layout_history_bz"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="17sp"
        android:text="无查询结果"
        android:layout_margin="2dp"
        android:padding="2dp"
        android:id="@+id/text_res_empty"
        android:visibility="gone"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/list_guide"
        android:layout_margin="2dp"
        android:divider="@null"
        >
    </ListView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="记录查询"
        android:gravity="center"
        android:background="@drawable/shape_button_pre"
        android:textColor="@color/colorWhite"
        android:textSize="17sp"
        android:id="@+id/button_bz_record"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />
</LinearLayout>