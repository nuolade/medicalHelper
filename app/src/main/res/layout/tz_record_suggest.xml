<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="体质记录查询"
            android:background="@color/colorBGTitle"
            android:id="@+id/suggest_title"
            android:layout_margin="1dp"
            android:paddingLeft="20dp"
            android:textSize="25sp"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextWhite"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_suggest_all"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAliceBlue"
            android:padding="1dp"
            android:layout_margin="1dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/suggest_name"
                android:background="@drawable/shape_button_pre"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:padding="5dp"
                android:layout_margin="1dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/suggest_phone"
                android:background="@drawable/shape_button_pre"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:padding="5dp"
                android:layout_margin="1dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAliceBlue"
            android:padding="1dp"
            android:layout_margin="1dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/suggest_age"
                android:background="@drawable/shape_button_pre"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:padding="5dp"
                android:layout_margin="1dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/suggest_gender"
                android:background="@drawable/shape_button_pre"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:padding="5dp"
                android:layout_margin="1dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAliceBlue"
            android:padding="1dp"
            android:layout_margin="1dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/suggest_tz"
                android:background="@drawable/shape_button_pre"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:padding="5dp"
                android:layout_margin="1dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_tz_suggest_list"
            android:padding="1dp"
            android:layout_margin="1dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基础介绍"
                android:background="@drawable/shape_button_pre"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:padding="3dp"
                android:layout_margin="2dp"
                android:id="@+id/text_bisic_all"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout_bisic_all"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="1dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_bisic_1"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="@color/colorTextGray"
                        android:background="@color/colorLightCyan"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:layout_margin="1dp"

                        />
                    <include layout="@layout/line_h_blue"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycler_bisic"
                        android:layout_margin="1dp"
                        />
                </LinearLayout>
                <include layout="@layout/line_v_blue"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:id="@+id/layout_bisic_other"
                    android:layout_margin="1dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_bisic_2"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="@color/colorTextGray"
                        android:background="@color/colorLightCyan"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:layout_margin="1dp"
                        />
                    <include layout="@layout/line_h_blue"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycler_bisic_other"
                        android:layout_margin="1dp"
                        />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_tz_suggest_list"
            android:padding="1dp"
            android:layout_margin="1dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中医调节"
                android:background="@drawable/shape_button_pre"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:padding="3dp"
                android:layout_margin="2dp"
                android:id="@+id/text_condition_all"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout_con_all"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="1dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_condition_1"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="@color/colorTextGray"
                        android:background="@color/colorLightCyan"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:layout_margin="1dp"
                        />
                    <include layout="@layout/line_h_blue"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycler_conditioning"
                        android:layout_margin="1dp"
                        />
                </LinearLayout>
                <include layout="@layout/line_v_blue"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:id="@+id/layout_con_other"
                    android:layout_margin="1dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_condition_2"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="@color/colorTextGray"
                        android:background="@color/colorLightCyan"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:layout_margin="1dp"
                        />
                    <include layout="@layout/line_h_blue"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycler_conditioning_other"
                        android:layout_margin="1dp"
                        />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_tz_suggest_list"
            android:padding="1dp"
            android:layout_margin="1dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运动起居"
                android:background="@drawable/shape_button_pre"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:padding="3dp"
                android:layout_margin="2dp"
                android:id="@+id/text_sports_all"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout_sports_all"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="1dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_sports_1"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="@color/colorTextGray"
                        android:background="@color/colorLightCyan"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:layout_margin="1dp"
                        />
                    <include layout="@layout/line_h_blue"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycler_sports"
                        android:layout_margin="1dp"
                        />
                </LinearLayout>
                <include layout="@layout/line_v_blue"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:id="@+id/layout_sports_other"
                    android:layout_margin="1dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_sports_2"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="@color/colorTextGray"
                        android:background="@color/colorLightCyan"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:layout_margin="1dp"
                        />
                    <include layout="@layout/line_h_blue"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycler_sports_other"
                        android:layout_margin="1dp"
                        />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>